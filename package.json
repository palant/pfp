{
  "title": "Easy Passwords",
  "name": "easypasswords",
  "id": "easypasswords@palant.de",
  "version": "1.1.2",
  "description": "Use a single master password to generate secure passwords for all websites - without losing track of passwords you cannot change.",
  "main": "index.js",
  "author": "Wladimir Palant",
  "homepage": "https://github.com/palant/easypasswords",
  "permissions": {
    "private-browsing": true,
    "multiprocess": true
  },
  "preferences": [
    {
      "name": "autolock",
      "type": "bool",
      "value": true,
      "title": " "
    },
    {
      "name": "autolock_delay",
      "type": "integer",
      "value": 10,
      "title": " "
    }
  ],
  "engines": {
    "firefox": "41.0 - 52.0"
  },
  "buttonPanel": {
    "icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "64": "images/icon64.png"
    },
    "contentURL": "panel/panel.html",
    "contentScript": [
      "panel/zxcvbn-4.3.0.js",
      "panel/jsqr-1.0.2.js",
      "panel/index.js"
    ]
  },
  "contentPage": {
    "contentURL": "allpasswords/allpasswords.html",
    "contentScript": "allpasswords/index.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "globals": {
      "console": false
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "off",
      "array-bracket-spacing": "error",
      "arrow-spacing": "error",
      "brace-style": [
        "error",
        "allman"
      ],
      "comma-spacing": "error",
      "comma-style": "error",
      "consistent-return": "error",
      "computed-property-spacing": "error",
      "eol-last": "error",
      "indent": [
        "error",
        2
      ],
      "key-spacing": "error",
      "keyword-spacing": "error",
      "linebreak-style": "error",
      "new-parens": "error",
      "no-spaced-func": "error",
      "no-trailing-spaces": "error",
      "no-var": "error",
      "no-whitespace-before-property": "error",
      "object-curly-spacing": "error",
      "operator-assignment": "error",
      "operator-linebreak": "error",
      "padded-blocks": [
        "error",
        "never"
      ],
      "prefer-rest-params": "warn",
      "prefer-spread": "warn",
      "require-yield": "warn",
      "quotes": [
        "error",
        "double",
        {
          "avoidEscape": true
        }
      ],
      "semi": "error",
      "semi-spacing": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": "error",
      "space-infix-ops": "error",
      "space-unary-ops": "error",
      "spaced-comment": "error",
      "yield-star-spacing": "error"
    }
  },
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/palant/easypasswords.git"
  },
  "devDependencies": {
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-eslint": "^2.0.0",
    "gulp-htmlhint": "^0.3.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.2",
    "gulp-stylelint": "^2.0.2",
    "gulp-zip": "^3.2.0",
    "jpm": "^1.0.6",
    "merge-stream": "^1.0.0",
    "node-rsa": "^0.3.2",
    "nodeunit": "^0.9.1",
    "properties-parser": "^0.3.1",
    "sandboxed-module": "^2.0.3",
    "stylelint-config-standard": "^6.0.0",
    "subtle": "^0.1.8",
    "text-encoding": "^0.6.0",
    "webpack-stream": "^3.2.0"
  }
}
